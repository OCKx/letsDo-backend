{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.html",
    "src/**/*.json",
    "prisma/prisma.ts",
    "src/docs/index.js",
    "env.d.ts"
  ],
  "exclude": ["node_modules"]
}
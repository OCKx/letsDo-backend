{
  "swagger": "2.0",
  "info": {
    "title": "letsDo",
    "description": "letsDo API documentation",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/api/v1/user/": {
      "get": {
        "tags": ["User"],
        "summary": "Get user",
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/v1/user/login": {
      "post": {
        "tags": ["User"],
        "summary": "User login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/v1/user/register": {
      "post": {
        "tags": ["User"],
        "summary": "User registration",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid data"
          }
        }
      }
    },
    "/api/v1/user/logout": {
      "post": {
        "tags": ["User"],
        "summary": "User logout",
        "responses": {
          "200": {
            "description": "Successful logout"
          }
        }
      }
    },
    "/api/v1/user/update": {
      "put": {
        "tags": ["User"],
        "summary": "Update user details",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated successfully"
          },
          "400": {
            "description": "Invalid data"
          }
        }
      }
    },
    "/api/v1/otp/forgot-password": {
      "post": {
        "tags": ["OTP"],
        "summary": "Forgot password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OTP"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP sent successfully"
          },
          "400": {
            "description": "Invalid email"
          }
        }
      }
    },
    "/api/v1/otp/verify-otp": {
      "post": {
        "tags": ["OTP"],
        "summary": "Verify OTP",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OTP"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP verified successfully"
          },
          "400": {
            "description": "Invalid or expired OTP"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["firstName", "lastName", "email", "password"]
    },
    "OTP": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": ["email", "otp"]
    }
  }
}
